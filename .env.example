# Whisper Transcription Service - Environment Variables
# Copy this file to .env and customize the values

# ===== Required =====

# Admin password for API admin endpoints
ADMIN_PASSWORD=your_secure_password_here

# ===== Optional =====

# Whisper model to use (default: large-v3)
# Options: tiny, base, small, medium, large, large-v2, large-v3
WHISPER_MODEL=large-v3

# Minutes of idle time before unloading model from GPU (default: 5)
MODEL_UNLOAD_MINUTES=5

# Days to retain job data (default: 7)
JOB_RETENTION_DAYS=7

# API key for authentication (optional - leave empty for no auth)
API_KEY=

# Cloudflare Tunnel token (optional - for external access)
CLOUDFLARE_TUNNEL_TOKEN=

# Debug mode (default: false)
DEBUG=false
